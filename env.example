# Application Settings
APP_NAME=crypto-morning-brief
APP_VERSION=0.1.0
DEBUG=false
LOG_LEVEL=INFO

# Server Settings
HOST=0.0.0.0
PORT=8000

# API Keys (optional - for future use)
# COIN_API_KEY=
# BINANCE_API_KEY=

# Provider Selection
# Options: "mock" (default), "public" (CoinGecko API), "real"
PROVIDER=public

# Telegram Notification (optional)
# Set SEND_TELEGRAM=true to enable Telegram notifications
SEND_TELEGRAM=false
# Get bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=
# Get chat ID by messaging your bot and visiting: https://api.telegram.org/bot<TOKEN>/getUpdates
TELEGRAM_CHAT_ID=
# Parse mode: HTML (default) or MarkdownV2
TELEGRAM_PARSE_MODE=HTML
# Wrap markdown in <pre> tags for better formatting (default: false)
TELEGRAM_WRAP_PRE=false

# Currency Settings
# USD to KRW exchange rate is automatically fetched from API
# This setting is only used as fallback if API fails
USD_TO_KRW=1300.0

